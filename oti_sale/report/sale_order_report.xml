<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="action_report_saleorder_oti" model="ir.actions.report">
	<field name="name">Impression Devis</field>
	<field name="model">sale.order</field>
	<field name="report_type">qweb-pdf</field>
	<field name="report_name">oti_sale.report_saleorder_oti</field>
	<field name="report_file">oti_sale.report_saleorder_oti</field>
	<field name="print_report_name">'OFT - %s' % (object.name)</field>
	<field name="binding_model_id" ref="sale.model_sale_order"/>
	<field name="binding_type">report</field>
	<field name="multi" eval="False"></field>
  </record>

  <record id="paperformat_landscape_a4" model="report.paperformat">
	<field name="name">A4 Landscape</field>
	<field name="default" eval="True"/>
	<field name="format">A4</field>
	<field name="page_height">0</field>
	<field name="page_width">0</field>
	<field name="orientation">Landscape</field>
	<field name="margin_top">40</field>
	<field name="margin_bottom">5</field>
	<field name="margin_left">7</field>
	<field name="margin_right">7</field>
	<field name="header_line" eval="False"/>
	<field name="header_spacing">35</field>
	<field name="dpi">90</field>
  </record>


  <record id="action_report_attachment" model="ir.actions.report">
	<field name="name">Impression Attachment</field>
	<field name="model">sale.order</field>
	<field name="report_type">qweb-pdf</field>
	<field name="report_name">oti_sale.report_sale_attachment_oti</field>
	<field name="report_file">oti_sale.report_sale_attachment_oti</field>
	<field name="print_report_name">'Attachment Bon de Commande - %s - %s' % (object.name, object.sale_attachment_date)
	</field>
	<field name="binding_model_id" eval="False"/>
	<field name="binding_type">report</field>
	<field name="multi" eval="False"></field>
	<field name="paperformat_id" ref="oti_sale.paperformat_landscape_a4"/>
  </record>

</odoo>